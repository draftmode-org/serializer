<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd"
         colors="true"
         stopOnFailure="true"
         bootstrap="plugin/autoload.php"
         cacheResult ="false"
         failOnRisky="true"
         failOnWarning="true">
  <coverage>
    <include>
      <directory>./</directory>
    </include>
    <exclude>
      <directory>./plugin</directory>
      <directory>./tests</directory>
    </exclude>
    <report>
      <html outputDirectory="./tests/.report"/>
    </report>
  </coverage>
  <php>
    <ini name="error_reporting" value="-1"/>
  </php>
  <testsuites>
    <testsuite name="Terrazza Serializer Component Test">
      <directory>./tests/Annotation</directory>
      <directory>./tests/Decoder</directory>
      <directory>./tests/Encoder</directory>
      <directory>./tests/Normalizer</directory>
      <directory>./tests/Factory/Json</directory>
    </testsuite>
    <testsuite name="single">
      <directory>./tests/Annotation</directory>
    </testsuite>
  </testsuites>
</phpunit>
