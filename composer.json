{
    "name": "terrazza/serializer",
    "type" : "library",
    "version": "1.0.1",
    "description": "Terrazza Component Serializer",
    "license": "MIT",
    "config" : {
        "vendor-dir" : "plugin"
    },
    "authors": [
        {
            "name": "Peter Fux",
            "email": "it@noframework.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "terrazza/reflectionclass": "1.0.*",
        "psr/log": "1.1.*",
        "ext-json": "*",
        "ext-libxml": "*"
    },
    "require-dev" : {
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "4.x-dev",
        "terrazza/logger": "1.0.*"
    },
    "autoload": {
        "psr-4": {
            "Terrazza\\Component\\Serializer\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Terrazza\\Component\\Serializer\\Tests\\_Examples\\" : "tests\\_Examples",
            "Terrazza\\Component\\Serializer\\Tests\\_Mocks\\" : "tests\\_Mocks"
        }
    },
    "minimum-stability": "dev"
}
