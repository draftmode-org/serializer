{
    "name": "terrazza/serializer",
    "type" : "library",
    "version": "1.0.0",
    "description": "Terrazza Component Serializer",
    "license": "MIT",
    "config" : {
        "vendor-dir" : "plugin"
    },
    "authors": [
        {
            "name": "Peter Fux",
            "email": "it@noframework.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "terrazza/reflectionclass": "*",
        "terrazza/logger": "*",
        "ext-json": "*"
    },
    "require-dev" : {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Terrazza\\Component\\Serializer\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Terrazza\\Component\\Serializer\\Tests\\Examples\\" : "tests\\Examples"
        }
    },
    "minimum-stability": "dev"
}